<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="acrprogress">
        <!--进度条粗细-->
        <attr name="arcstrokewith" format="dimension" />
        <!--大文字大小-->
        <attr name="textsize1" format="dimension" />
        <!--小文字大小-->
        <attr name="textsize2" format="dimension" />
        <!--大文字颜色-->
        <attr name="textcolor1" format="color" />
        <!--小文字颜色-->
        <attr name="textcolor2" format="color" />
        <!--进度条颜色-->
        <attr name="arccolorfront" format="color" />
        <!--进度条背景色-->
        <attr name="arccolorback" format="color" />
    </declare-styleable>



    <declare-styleable name="average_text">
        <attr name="av_textSize" format="dimension" />
        <attr name="av_textColor" format="color" />
        <attr name="av_text" format="string" />
    </declare-styleable>

        <!--可回弹RecyclerView的自定义属性-->
        <declare-styleable name="BounceRecyclerView">
            <attr name="oritation">
                <enum name="vertical" value="0"/>
                <enum name="horizontal" value="1"/>
            </attr>
        </declare-styleable>



    <!-- 通用标题属性 -->
    <declare-styleable name="CommonTitleView">

        <!--刘海颜色-->
        <attr name="status_color" format="color" />
        <!--title颜色-->
        <attr name="title_color" format="color" />
        <!--返回按钮图片-->
        <attr name="back_img" format="reference" />

        <!--返回文字相关-->
        <attr name="back_Text" format="string" />
        <attr name="back_color" format="color" />
        <attr name="back_size" format="dimension" />

        <!--title标题文字相关-->
        <attr name="title_content_Text" format="string" />
        <attr name="title_content_color" format="color" />
        <attr name="title_content_size" format="dimension" />

        <!--右边文字相关-->
        <attr name="right_Text" format="string" />
        <attr name="right_color" format="color" />
        <attr name="right_size" format="dimension" />

        <!--右边图片-->
        <attr name="right_img" format="reference" />

    </declare-styleable>

</resources>