<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.login.FingerOpenActivity">

    <com.example.xuxiaopeng002.myapplication.view.CommonTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:back_img="@drawable/ic_back"
        app:title_content_Text="指纹识别" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mIv"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:src="@mipmap/ic_finger_success" />

        <TextView
            android:id="@+id/mTvIdentity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mIv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:padding="16dp"
            android:text="点击验证" />
    </RelativeLayout>

</LinearLayout>