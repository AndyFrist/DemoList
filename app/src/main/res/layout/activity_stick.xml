<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StickActivity">

    <com.example.ex_xuxiaopeng002.myapplication.view.MyScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@color/color333333" />


            <android.support.design.widget.TabLayout
                android:id="@+id/tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabBackground="@color/color_blue"
                app:tabIndicatorColor="@color/color_green"
                app:tabMode="scrollable"

                app:tabSelectedTextColor="@color/color_red"
                app:tabTextColor="@color/colorPrimary" />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_category_1"/>
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_category_2"/>
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_category_3"/>
                </LinearLayout>
            </HorizontalScrollView>

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="400dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="900dp"
                android:background="@color/color333333" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="900dp"
                android:background="@color/color_green" />
        </LinearLayout>


    </com.example.ex_xuxiaopeng002.myapplication.view.MyScrollView>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:tabBackground="@color/color_blue"
        app:tabIndicatorColor="@color/color_green"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/color_red"
        app:tabTextColor="@color/colorPrimary" />


</RelativeLayout>